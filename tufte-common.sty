    \begin{lrbox}{\@tufte@marginfigbox}
    \begin{minipage}{\marginparwidth}
        \@tufte@marginfont
        \def\@captype{figure}
        \vspace*{#1}
        \@tufte@justification
    }    
    {\end{minipage}%
     \end{lrbox}%
     \marginpar{\usebox{\@tufte@marginfigbox}}}


%%
% Margin table environment
\newsavebox{\@tufte@margintablebox}
